/* Write your global styles here, in PostCSS syntax */
@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {
	div.slide-container {
		@apply fixed w-screen h-screen border-2;
		@apply duration-500 transition transform-gpu;

		&.visible {
			@apply translate-x-0;
		}
		&.left {
			@apply -translate-x-full;
		}

		&.right {
			@apply translate-x-full;
		}
	}

	body.comment {
		& div.slide {
			& * {
				@apply hidden;
			}
			& p.comment {
				@apply block;
			}
		}
	}
}
